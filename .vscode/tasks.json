{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "cargo",
            "subcommand": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "cargo build --release",
            "type": "process",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "cargo build --examples",
            "type": "process",
            "command": "cargo",
            "args": [
                "build",
                "--examples"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cargo build --examples --release",
            "type": "process",
            "command": "cargo",
            "args": [
                "build",
                "--examples",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "cargo clean",
            "type": "cargo",
            "subcommand": "clean",
            "group": "build"
        }
    ]
}